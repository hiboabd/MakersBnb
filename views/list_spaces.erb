<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="<%= url('/list_spaces.css') %>" rel="stylesheet" />
</head>

<main>

<h3>
  <%= flash[:notice] %>
</h3>


<h2>
  <% if @user %>
    Welcome, <%= @user.first_name %>
  <% end %>
</h2>

<% if @user %>
  <h1> Welcome, <%= @user.first_name %> </h1>
  <form action="/sessions/destroy" method="post">
    <input type="submit" value="Log out" />
  </form>

  <form action="/spaces/new" method="get">
    <input type="submit" value="List your own space" />
  </form>
<% else %>
<form action="/sessions/new" method="get">
  <input type="submit" value="Log in" />
</form>
<% end %>

<h1> Book one of our amazing spaces </h1>

<dl>
  <% @spaces.each do |space| %>
  <div class="space-container">
  <dt><h3><%= space.name %></h3></dt>
  <dd><h3>- <%= space.description %></h3></dd>
  <dd><h3>- Â£ <%= space.price %> per night</h3></dd>
  <form action="/spaces/<%= space.id %>/show" method="get">
    <input type="submit" value="Check availability" />
  </form>
  </div>
  <br>
  <%end%>
</dl>

</main>

<style>

  body {
    background-image: url("https://bit.ly/3bRCi1O");
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    text-align: center;
    background-size: cover;
    background-position: bottom;
  }

  main {
    min-height: 100vh;
    background-image: linear-gradient(to bottom, rgba(0,0,0, 0.25), rgba(0,0,0,0.3));
  }

  h1 {
    font-family: Arial;
    color: white;
    font-size: 3em;
  }

  h2 {
    text-align: center;
    font-family: Arial;
    color: white;
    font-weight: lighter;
    font-size: 2em;
  }

  h3 {
    text-align: center;
    font-family: Arial;
    color: white;
    font-weight: lighter;
    font-size: 1em;
  }

  .space-container {
    background: linear-gradient(to bottom, rgba(0,0,0, 0.25), rgba(0,0,0,0.75));
  }

  input[type=submit] {
   width: 200 px;
   margin: 10px 10px 10px 30px;
   box-sizing: border-box;
   border: 2px solid #ccc;
   border-radius: 4px;
   font-size: 1em;
   background-color: #ffba00;
   /* padding: 12px 20px 12px 40px; */
  }

</style>
